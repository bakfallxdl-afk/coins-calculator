/* 悬停动画 */
.app-header:hover .header-image {
    transform: rotate(-1deg) scale(1.03);
    transition: all 0.5s ease;
}

.header-image {
    transition: all 0.5s ease;
}

.app-header:hover {
    transform: translateY(-3px);
}

.app-header {
    transition: all 0.3s ease;
}
