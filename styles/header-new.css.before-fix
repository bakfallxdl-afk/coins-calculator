/* ========== 修复版：移除半透明方块 ========== */
.app-header {
    /* 橙色渐变背景 */
    background: linear-gradient(
        135deg,
        #FFB347 0%,
        #FF8C42 25%,
        #FFD89C 50%,
        #FFF5E1 75%,
        #FFA726 100%
    ) !important;
    
    position: relative !important;
    margin-bottom: 25px !important;
    border-radius: 20px !important;
    overflow: hidden !important;
    box-shadow: 0 10px 30px rgba(255, 107, 53, 0.2) !important;
    padding: 15px !important;
    border: 4px solid #FFD89C !important;
    min-height: 280px !important;
    max-height: 350px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
}

/* 移除或修复伪元素 */
.app-header::before,
.app-header::after,
.header-content::before,
.header-content::after {
    content: none !important; /* 移除伪元素内容 */
    background: transparent !important; /* 移除背景 */
    opacity: 0 !important; /* 完全透明 */
}

/* 确保.header-content没有半透明背景 */
.header-content {
    background: transparent !important;
    position: relative !important;
    z-index: 2 !important;
}

/* 图片显示正常 */
.header-image {
    position: relative !important;
    z-index: 3 !important;
    max-height: 240px !important;
    max-width: 90% !important;
}

/* 移除星星的过大阴影 */
.star {
    z-index: 1 !important;
    text-shadow: none !important;
}
