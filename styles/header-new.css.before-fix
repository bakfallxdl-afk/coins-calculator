/* 头部内容容器 - 控制图片大小 */
.header-content {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

/* 修复图片大小 - 添加严格的尺寸控制 */
.header-image {
    /* 严格限制图片大小 */
    max-height: 240px; /* 控制最大高度 */
    max-width: 90%;    /* 控制最大宽度 */
    height: auto;
    width: auto;
    display: block;
    
    /* 保持透明PNG显示效果 */
    object-fit: contain; /* 保持完整比例 */
    object-position: center; /* 居中显示 */
    
    /* 轻微旋转和阴影增加立体感 */
    transform: rotate(-2deg);
}

/* 星星装饰 */
.star {
    position: absolute;
    color: #FF8C42; /* 与背景协调的橙色 */
    font-size: 20px;
    opacity: 0.7;
    z-index: 2;
    animation: twinkle 3s infinite;
}

.star:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; }
.star:nth-child(2) { top: 15%; right: 15%; animation-delay: 0.5s; }
.star:nth-child(3) { bottom: 25%; left: 15%; animation-delay: 1s; }
.star:nth-child(4) { bottom: 20%; right: 10%; animation-delay: 1.5s; }

@keyframes twinkle {
    0%, 100% { opacity: 0.3; transform: scale(0.9); }
    50% { opacity: 0.9; transform: scale(1.1); }
}

